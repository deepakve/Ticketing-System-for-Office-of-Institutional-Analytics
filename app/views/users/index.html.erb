<p id="notice"><%= notice %></p>

<div style="width:100%;height:80%;background-color: #E7E7E7;padding: 1%;border-radius: 8px;margin: 15%;margin-top: 2%;margin-left:5%;">

<h1>List of Users</h1>

<table class="table table-hover" >
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Admin</th>
      <th>Role</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td class="col col-sm-3"><%= user.first_name %></td>
        <td class="col col-sm-3"><%= user.email %></td>
        <td class="col col-sm-3"><%= user.admin %></td>
        <td class="col col-sm-3"><%= user.role %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>


<div style="margin-left:5%; float:left; width:8%;height:30px;background-color: #c10037;border-color: #c10037;text-align: center;padding: 5px;border-radius: 5px;"><%= link_to "New User", new_user_path, style:'color:white;background-color: #c10037;font-family: sans-serif;' %></div>